<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#546E7A"
    tools:context=".Post.Popup">

    <RelativeLayout
        android:id="@+id/yorum_silme_rltv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <ImageView
            android:id="@+id/imageView11_yrm"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textView_yrm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"
            android:layout_toEndOf="@id/imageView11_yrm"
            android:text="@string/ad"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editText28_yrm"
            android:layout_width="300dp"
            android:layout_centerHorizontal="true"
            android:layout_height="100dp"
            android:layout_below="@id/imageView11_yrm"
            android:layout_centerVertical="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edit_text_border"
            android:gravity="top"
            android:hint="@string/yorum"
            android:paddingStart="5dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/editText28_yrm"
            android:paddingRight="5dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/button10"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/update" />
            <Button
                android:id="@+id/button11"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/delete_icon" />
        </LinearLayout>


    </RelativeLayout>
</RelativeLayout>