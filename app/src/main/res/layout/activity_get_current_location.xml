<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="deneyimkutusu.xedoxsoft.deneyimkutusu.Maps.GetCurrentLocation">

    <RelativeLayout
        android:id="@+id/getlocationrelative"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#3F51B5"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="108dp">

        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView21"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="22dp"
            android:text="Enlem"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView20"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="30dp"
            android:text="Boylam"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_above="@+id/textView23"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="20dp"
            android:text="Ülke"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/locationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/getLocationBtn"
            android:layout_centerInParent="true"
            android:layout_marginBottom="10dp"
            android:padding="10dp"
            android:text=""
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="17sp" />

        <Button
            android:id="@+id/getLocationBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="54dp"
            android:background="#FFFFFF"
            android:padding="10dp"
            android:text="Get Current Location" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/locationText"
            android:layout_alignParentStart="true"
            android:textColor="@color/white"
            android:layout_marginBottom="79dp"
            android:text="Şehir" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
